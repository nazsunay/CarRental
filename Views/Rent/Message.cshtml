@if (ViewBag.Message != null)
{
    <div class="alert @ViewBag.MessageCssClass alert-dismissible fade show" role="alert">
        <strong>Hata!</strong> @ViewBag.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-sm ms-2">Anasayfaya Dön</a>
    </div>
}