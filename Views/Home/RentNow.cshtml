@using Newtonsoft.Json
@model Rental

<form asp-action="RentNow" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <label for="rentalDate">Kiralama Tarihi:</label>
    <input type="date" name="rentalDate" required />

    <label for="returnDate">İade Tarihi:</label>
    <input type="date" name="returnDate" required />

    <button type="submit">Kirala</button>
</form>
