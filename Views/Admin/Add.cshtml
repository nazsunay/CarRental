@model List<Car>

@{
    ViewData["Title"] = "Araç Ekle";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container {
            width: 60%;
            margin: 40px auto;
            background-color: #fff;
            padding: 30px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 26px;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            font-size: 14px;
        }

        .form-control, .form-control-file, textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            background-color: white;
        }

        .form-control-file {
            padding: 5px;
        }

        .btn-primary {
            background-color: #FFD700;
            border: none;
            color: #333;
            padding: 12px 24px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            display: inline-block;
            transition: background-color 0.3s;
            text-align: center;
        }

            .btn-primary:hover {
                background-color: #ff9900;
            }

        .alert-primary {
            background-color: #d1ecf1;
            color: #0c5460;
            padding: 15px;
            border-radius: 5px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <form class="form" method="post" action="/Admin/Add" autocomplete="off" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Make" class="form-label">Araç İsmi</label>
                <input type="text" id="Make" name="Make" class="form-control" required placeholder="Araç Ismi" />
            </div>
            <div class="form-group">
                <label for="Model" class="form-label">Model</label>
                <input type="text" id="Model" name="Model" class="form-control" required placeholder="Model" />
            </div>
            <div class="form-group">
                <label for="Year" class="form-label">Araç Yılı</label>
                <input type="datetime" id="Year" name="Year" class="form-control" required placeholder="Arac Yili" />
            </div>
            <div class="form-group">
                <label for="DailyRate" class="form-label">Günlük Fiyat</label>
                <input type="number" id="DailyRate" name="DailyRate" class="form-control" required placeholder="Gunluk Fiyat" />
            </div>
            <label for="IsAvailable">Araç Durumu</label>
            <select id="IsAvailable" name="IsAvailable">
                <option value="1">Mevcut</option>
                <option value="2">Mevcut Değil</option>
            </select>
            <div class="form-group">
                <label for="Image" class="form-label">Fotoğraf</label>
                <input type="file" id="Image" name="Image" class="form-control-file" accept="image/png, image/jpeg" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Ekle</button>
            </div>
            @if (ViewData["Mesaj"] != null)
            {
                <div class="alert alert-primary" role="alert">
                    @ViewData["Mesaj"]
                </div>
            }
        </form>
    </div>
</body>
</html>
